<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Blog</title>
    <link rel="stylesheet" href="/BlogApplication/public/style.css">
</head>
<body>
    <h1>Welcome to My Blog</h1>
    <% if (posts.length > 0) { %>
        <ul>
        <% posts.forEach(post => { %>
            <li><%= post.title %></li>
        <% }); %>
        </ul>
    <% } else { %>
        <p>No posts yet.</p>
    <% } %>
</body>
</html>