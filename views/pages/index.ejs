<main>
    <%- include('../partials/header.ejs') %>
    <h1 class="title">Welcome to my Blog App</h1>
    <div class="form-container">
        <p class="form-text">Fill the form for creating your blog</p>
        <form action="/home" method="post">
            <label for="bTitle">Blog Title</label>
            <input
              type="text"
              id="bTitle"
              name="blogTitle"
              placeholder="Your Title Here..."
              required
            />
            <label for="bDes">Blog Description</label>
            <textarea
            type="text"
            id="bDes"
            name="blogDes"
            placeholder="Your Blog here..."
            rows="6"
            required
            >
            </textarea>
            <input
            type="submit"
            value="PUBLISH"
            />
        </form>
    </div>
    <%- include('../partials/footer.ejs') %>
</main>